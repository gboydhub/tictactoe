<form action="new_game" method="post" id="optionsForm">
    <div id="title"><div id="piratename">Pirate's</div> vs <div id="ninjaname">Ninja's</div></div><br>
    <div id="player1">
        <img src="/images/pirate.png"><br>
        <label class="custom_radio"> Human
            <input type="radio" name="p1_type" value="human" onclick="hideOptions(1);" checked="checked">
            <span class="checkmark"></span>
        </label>
        <label class="custom_radio"> Computer
            <input type="radio" name="p1_type" id="p1sel" value="ai" onclick="showOptions(1);">
            <span class="checkmark"></span>
        </label>
        <div id="comp1_options" class="ai-slide">
            <div class="custom-select red">
            <select name="comp1_difficulty">
                <option value="1">Random</option>
                <option value="2">Sequential</option>
                <option value="3">Unbeatable</option>
            </select>
            </div>
        </div>
    </div>
    <div id="player2">
        <img src="/images/ninja.png"><br>
        <label class="custom_radio"> Human
            <input type="radio" name="p2_type" value="human" onclick="hideOptions(2);" checked="checked">
            <input type="hidden" id="shh" name="eggy" value="false">
            <span class="checkmark"></span>
        </label>
        <label class="custom_radio"> Computer
            <input type="radio" name="p2_type" value="ai" id="p2sel" onclick="showOptions(2);">
            <script type="text/javascript" src="/js/easteregg.js"></script>
            <span class="checkmark"></span>
        </label>
        <div id="comp2_options" class="ai-slide">
            <div class="custom-select red">
            <select name="comp2_difficulty">
                <option value="1">Random</option>
                <option value="2">Sequential</option>
                <option value="3">Unbeatable</option>
            </select>
            </div>
        </div>
    </div><br>
    <button class="start_btn">Start Game</button><br><br>
    <font size="2rem">
    Tip:<br>
    Ninja's go first, because they are ninjas.</font>
</form>

<script>
    var checkA = document.getElementById("p1sel");
    var checkB = document.getElementById("p2sel");
    console.log(checkA);
    if(checkA.checked)
    {
        showOptions(1);
    }
    if(checkB.checked)
    {
        showOptions(2);
    }
</script>